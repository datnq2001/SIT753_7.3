# Application Configuration
NODE_ENV=development
PORT=3000

# Database Configuration  
DB_PATH=./mySurveyDB.db
DB_TYPE=sqlite3

# Security Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=change-this-jwt-secret-in-production
SESSION_SECRET=change-this-session-secret-in-production  
ENCRYPTION_KEY=change-this-32-char-key-production

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SUBMIT_RATE_LIMIT_MAX=5

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security Scanning
SNYK_TOKEN=your-snyk-token-here

# Application Metadata
APP_NAME=dKin Butterfly Club
APP_VERSION=1.0.0
APP_DESCRIPTION=Informative web page on Butterflies from around the world

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# Analytics (if needed)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXX-X

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_EMAIL_NOTIFICATIONS=false
MAINTENANCE_MODE=false